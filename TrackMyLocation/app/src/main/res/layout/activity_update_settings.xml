<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="55dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.leanhippo.root.trackmylocation.UpdateSettings">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share your location update for:"
        android:id="@+id/shareLocationUpdateSettingsTextView"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shareLocationUpdateSettingsSpinner"
        android:layout_below="@+id/shareLocationUpdateSettingsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search your friend's location for:"
        android:id="@+id/friendsLocationUpdateSettingsTextView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/shareLocationUpdateSettingsSpinner"
        android:layout_alignRight="@+id/shareLocationUpdateSettingsTextView"
        android:layout_alignEnd="@+id/shareLocationUpdateSettingsTextView" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friendsLocationUpdateSettingsSpinner"
        android:layout_below="@+id/friendsLocationUpdateSettingsTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/friendsLocationUpdateSettingsSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="updateTimeSettings"
        android:background="#428f89"
        android:textColor="#fff"
        />


</RelativeLayout>
